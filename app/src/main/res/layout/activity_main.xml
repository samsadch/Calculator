<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/line_grey"
        android:orientation="vertical" >

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="0"
            android:ems="10"
            android:paddingEnd="4dp"
            android:textAlignment="textEnd"
            android:id="@+id/editText" android:paddingTop="44dp" android:background="@color/top_grey"
            android:textColor="@android:color/white" android:textSize="36sp"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line_grey"
            android:gravity="center">

        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center">
            <Button
                    android:text="AC"
                    android:layout_width="50pt"
                    android:layout_height="40pt"
                    android:background="@color/button_grey"
                    android:id="@+id/buttonAC"/>
            <Button
                    android:text="+/-"
                    android:layout_width="50pt"
                    android:background="@color/button_grey"
                    android:layout_height="40pt"
                    android:id="@+id/buttonSign"/>
            <Button
                    android:text="%"
                    android:layout_width="50pt"
                    android:layout_height="40pt"
                    android:background="@color/button_grey"
                    android:id="@+id/buttonPercent"/>
            <Button
                    android:text="รท"
                    android:layout_width="50pt"
                    android:layout_height="40pt"
                    android:background="@color/button_yellow"
                    android:id="@+id/buttonDevide"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center">
            <Button
                    android:text="7"
                    android:layout_width="50pt"
                    android:layout_height="40pt"
                    android:background="@color/button_grey"
                    android:id="@+id/button7"/>
            <Button
                    android:text="8"
                    android:layout_width="50pt"
                    android:layout_height="40pt"
                    android:background="@color/button_grey"
                    android:id="@+id/button8"/>
            <Button
                    android:text="9"
                    android:layout_width="50pt"
                    android:background="@color/button_grey"
                    android:layout_height="40pt" android:id="@+id/button9"/>
            <Button
                    android:text="x"
                    android:layout_width="50pt"
                    android:background="@color/button_yellow"
                    android:layout_height="40pt" android:id="@+id/buttonMultiply"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:gravity="center"
                  android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_width="50pt"
                    android:layout_height="40pt"
                    android:background="@color/button_grey"
                    android:id="@+id/button13"/>
            <Button
                    android:text="5"
                    android:layout_width="50pt"
                    android:background="@color/button_grey"
                    android:layout_height="40pt" android:id="@+id/button5"/>
            <Button
                    android:text="6"
                    android:layout_width="50pt"
                    android:layout_height="40pt"
                    android:background="@color/button_grey"
                    android:id="@+id/button6"/>
            <Button
                    android:text="-"
                    android:layout_width="50pt"
                    android:layout_height="40pt"
                    android:background="@color/button_yellow"
                    android:id="@+id/button1Subtract"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:gravity="center"
                  android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="50pt"
                    android:background="@color/button_grey"
                    android:layout_height="40pt" android:id="@+id/button1"/>
            <Button
                    android:text="2"
                    android:layout_width="50pt"
                    android:background="@color/button_grey"
                    android:layout_height="40pt" android:id="@+id/button2"/>
            <Button
                    android:text="3"
                    android:layout_width="50pt"
                    android:background="@color/button_grey"
                    android:layout_height="40pt" android:id="@+id/button3"/>
            <Button
                    android:text="+"
                    android:layout_width="50pt"
                    android:background="@color/button_yellow"
                    android:layout_height="40pt" android:id="@+id/buttonAdd"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/line_grey"
            android:layout_height="wrap_content">
        <Button
                android:text="0"
                android:layout_width="96pt"
                android:background="@color/button_grey"
                android:layout_height="40pt" android:id="@+id/button0" android:layout_weight="1"/>
        <Button
                android:text="."
                android:layout_width="55pt"
                android:background="@color/button_grey"
                android:layout_height="40pt" android:id="@+id/buttonDot" android:layout_weight="1"/>
        <Button
                android:text="="
                android:layout_width="45pt"
                android:background="@color/button_yellow"
                android:layout_height="40pt" android:id="@+id/buttonEqualTo" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>